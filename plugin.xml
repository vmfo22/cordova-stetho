<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android" id="com.bridge.stetho" version="0.5.0">
  <name>Stetho</name>
  <description>Facebook's Stetho for Cordova</description>
  <license>GPLv2</license>
  <keywords>cordova,stetho,android,debug,devtools,development</keywords>
  <repo>https://github.com/disusered/cordova-stetho</repo>
  <issue>https://github.com/disusered/cordova-stetho/issues</issue>
  <platform name="android">
    <config-file parent="/*" target="res/xml/config.xml">
      <feature name="Stetho">
        <param name="android-package" value="com.bridge.Stetho"/>
      </feature>
    </config-file>
    <config-file parent="/*" target="AndroidManifest.xml"/>
    <source-file src="src/android/Stetho.java" target-dir="src/com/bridge"/>
  </platform>
</plugin>
